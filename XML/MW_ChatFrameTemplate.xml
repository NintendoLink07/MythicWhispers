<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <ScrollFrame name="MW_ChatFrameTemplate" inherits="ScrollFrameTemplate, BackdropTemplate" hidden="true" virtual="true">
        <KeyValues>
            <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="string" />
        </KeyValues>

        <ScrollChild>
            <Frame parentKey="Container" inherits="VerticalLayoutFrame" setAllPoints="true">
                <KeyValues>
                    <KeyValue key="align" value="top" />
                    <KeyValue key="spacing" value="2" />
                </KeyValues>
            </Frame>
        </ScrollChild>
    </ScrollFrame>

    <Frame parentKey="ScrollBox" inherits="WoWScrollBoxList">
        <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.ChatsBar" relativePoint="BOTTOMLEFT" />
            <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" />
        </Anchors>
    </Frame>

    <EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
        <Anchors>
            <Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" />
            <Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" />
        </Anchors>
    </EventFrame>
</Ui>